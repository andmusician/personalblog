<%- include("../../partials/header.ejs") %>
    <%- include("../../partials/navbar.ejs") %>
        <div class="container">
            <hr>
            <div class="card">
                <div class="card-header">
                    <h2>Edição de categoria</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/categories/update">
                        <input type="hidden" class="form-control" name="id" value="<%= categoria.id %>">
                        <input type="text" class="form-control" name="title" id="" aria-describedby="helpId"
                            placeholder="<%= categoria.title %>">
                        <br>
                        <button type="submit" class="btn btn-dark">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include("../../partials/footer.ejs") %>